{
  "name": "rest-template",
  "version": "1.0.0",
  "description": "Rest Template",
  "main": "index.js",
  "api": [
    "v1"
  ],
  "scripts": {
    "start": "node build/index.js",
    "dev": "ts-node-dev -r tsconfig-paths/register --inspect --transpile-only --ignore-watch node_modules --respawn src/shared/infra/http/index.ts --poll",
    "demo": "ts-node src/shared/infra/http/index.ts",
    "build": "npm run clean && tsc -p tsconfig.prod.json --removeComments && npm run build:migrations && npm run build:swagger && npm run build:templates",
    "build:templates": "cp -r src/templates build/",
    "build:swagger": "cp -r src/swagger build/",
    "build:migrations": "cp -r src/migrations build/",
    "test": "NODE_ENV=test jest --runInBand --detectOpenHandles",
    "test:watch": "NODE_ENV=test jest --runInBand --detectOpenHandles --watch",
    "lint": "eslint --max-warnings=0 .",
    "style": "prettier --check 'src/**/*.ts'",
    "coverage": "jest --coverage --runInBand",
    "check": "npm run style && npm run lint && npm run coverage",
    "typeorm": "ts-node-dev -r tsconfig-paths/register ./node_modules/typeorm/cli",
    "migration:run": "npm run typeorm migration:run",
    "migration:create": "npm run typeorm migration:create",
    "seed": "ts-node-dev src/shared/infra/typeorm/seeds/index.ts"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@bull-board/api": "^3.8.1",
    "@bull-board/express": "^3.8.1",
    "body-parser": "1.19.0",
    "bull": "^4.2.0",
    "bytes": "3.1.0",
    "cors": "2.8.5",
    "dotenv": "8.2.0",
    "express": "4.17.1",
    "express-async-errors": "3.1.1",
    "jest": "27.4.5",
    "multer": "1.4.3",
    "pg": "8.5.1",
    "reflect-metadata": "0.1.13",
    "ts-jest": "27.1.2",
    "ts-node-dev": "1.1.1",
    "tsconfig-paths": "3.12.0",
    "tsyringe": "4.6.0",
    "typeorm": "^0.2.36",
    "typescript": "4.1.3",
    "ua-parser-js": "0.7.28",
    "uuid": "^8.3.2",
    "yargs": "16.2.0"
  },
  "devDependencies": {
    "@types/bull": "^3.15.7",
    "@types/cors": "2.8.10",
    "@types/dotenv": "8.2.0",
    "@types/express": "4.17.11",
    "@types/jest": "^26.0.20",
    "@types/node": "14.14.31",
    "@types/uuid": "^8.3.3",
    "@typescript-eslint/eslint-plugin": "5.7.0",
    "@typescript-eslint/parser": "5.7.0",
    "eslint": "8.4.1",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-config-prettier": "7.2.0",
    "eslint-import-resolver-typescript": "2.5.0",
    "eslint-plugin-import": "2.25.3",
    "eslint-plugin-import-helpers": "1.2.0",
    "eslint-plugin-prettier": "3.3.1",
    "prettier": "2.2.1"
  }
}
